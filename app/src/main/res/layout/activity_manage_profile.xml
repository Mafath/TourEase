<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:background="#FFFFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back button row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_back_24"
                app:tint="#111111"
                android:contentDescription="@string/cd_close" />
        </LinearLayout>

        <!-- Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:layout_marginTop="-15dp"
            android:paddingEnd="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/profile_title"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textColor="#111111"
                android:gravity="center" />
        </LinearLayout>

        <!-- Avatar & display name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="16dp">

            <FrameLayout
                android:layout_width="96dp"
                android:layout_height="96dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_avatar_placeholder"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.RoundedFull" />

                <ImageView
                    android:id="@+id/btn_edit_avatar"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="end|bottom"
                    android:layout_margin="4dp"
                    android:contentDescription="@string/edit_profile_picture"
                    android:padding="2dp"
                    android:src="@drawable/ic_edit_24"
                    app:tint="#000000" />
            </FrameLayout>

            <TextView
                android:id="@+id/tv_display_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/display_name"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#111111"
                android:layout_marginTop="10dp" />
        </LinearLayout>

        <!-- Detail rows -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="@drawable/divider_inset"
            android:showDividers="beginning|middle|end">

            <!-- Name -->
            <LinearLayout
                android:id="@+id/row_name"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_name"
                        android:textStyle="bold"
                        android:textColor="#111111"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_name_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/value_name"
                        android:textColor="#777777"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_chevron_right_24"
                    app:tint="#999999"
                    android:contentDescription="@string/cd_see_all" />
            </LinearLayout>

            <!-- Phone -->
            <LinearLayout
                android:id="@+id/row_phone"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_phone"
                        android:textStyle="bold"
                        android:textColor="#111111"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_phone_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/value_phone"
                        android:textColor="#777777"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_chevron_right_24"
                    app:tint="#999999"
                    android:contentDescription="@string/cd_see_all" />
            </LinearLayout>

            <!-- Email -->
            <LinearLayout
                android:id="@+id/row_email"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_email"
                        android:textStyle="bold"
                        android:textColor="#111111"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_email_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/value_email"
                        android:textColor="#777777"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_chevron_right_24"
                    app:tint="#999999"
                    android:contentDescription="@string/cd_see_all" />
            </LinearLayout>

            <!-- Country -->
            <LinearLayout
                android:id="@+id/row_country"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_country"
                        android:textStyle="bold"
                        android:textColor="#111111"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_country_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/value_country"
                        android:textColor="#777777"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_chevron_right_24"
                    app:tint="#999999"
                    android:contentDescription="@string/cd_see_all" />
            </LinearLayout>

            <!-- Address -->
            <LinearLayout
                android:id="@+id/row_address"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_address"
                        android:textStyle="bold"
                        android:textColor="#111111"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_address_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/value_address"
                        android:textColor="#777777"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_chevron_right_24"
                    app:tint="#999999"
                    android:contentDescription="@string/cd_see_all" />
            </LinearLayout>

            <!-- Emergency -->
            <LinearLayout
                android:id="@+id/row_emergency"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_emergency"
                        android:textStyle="bold"
                        android:textColor="#111111"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_emergency_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/value_emergency"
                        android:textColor="#777777"
                        android:textSize="12sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_chevron_right_24"
                    app:tint="#999999"
                    android:contentDescription="@string/cd_see_all" />
            </LinearLayout>
        </LinearLayout>

        <!-- Bottom navigation -->
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginTop="156dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/footer_card"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="bottom"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="24dp"
                app:cardElevation="2dp"
                app:strokeColor="#1A000000"
                app:strokeWidth="0dp">

                <com.google.android.material.bottomnavigation.BottomNavigationView
                    android:id="@+id/bottom_nav"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    app:itemIconSize="22dp"
                    app:itemIconTint="@color/nav_item_tint"
                    app:itemTextColor="@color/nav_item_tint"
                    app:labelVisibilityMode="unlabeled"
                    app:menu="@menu/menu_footer_explore" />
            </com.google.android.material.card.MaterialCardView>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </LinearLayout>
</ScrollView>
