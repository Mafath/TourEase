<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/home_underlay"
        layout="@layout/activity_homepage" />
    <View
        android:id="@+id/dim_scrim"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/side_panel"
        android:layout_width="230dp"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:elevation="8dp">
        <ImageView
            android:id="@+id/btn_drawer_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_close_24"
            android:contentDescription="@string/cd_close"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_avatar"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_avatar_placeholder"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.RoundedFull"
            app:layout_constraintTop_toBottomOf="@id/btn_drawer_close"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/user_name_sample"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#111111"
            app:layout_constraintTop_toBottomOf="@id/img_avatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <View
            android:id="@+id/divider_top"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="#EEEEEE"
            app:layout_constraintTop_toBottomOf="@id/tv_user_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <LinearLayout
            android:id="@+id/menu_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:divider="@drawable/divider_inset"
            android:showDividers="beginning|middle"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/divider_top"
            app:layout_constraintBottom_toTopOf="@id/logout_row"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <LinearLayout
                android:id="@+id/row_manage_profile"
                style="@style/DrawerRowStyle">
                <ImageView style="@style/DrawerRowIcon" android:src="@drawable/ic_person_24"/>
                <TextView style="@style/DrawerRowText" android:text="@string/menu_manage_profile"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/row_privacy" style="@style/DrawerRowStyle">
                <ImageView style="@style/DrawerRowIcon" android:src="@drawable/ic_lock_24"/>
                <TextView style="@style/DrawerRowText" android:text="@string/menu_privacy"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/row_help" style="@style/DrawerRowStyle">
                <ImageView style="@style/DrawerRowIcon" android:src="@drawable/ic_help_24"/>
                <TextView style="@style/DrawerRowText" android:text="@string/menu_help"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/row_notifications" style="@style/DrawerRowStyle">
                <ImageView style="@style/DrawerRowIcon" android:src="@drawable/ic_bell_24"/>
                <TextView style="@style/DrawerRowText" android:text="@string/menu_notifications"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/row_about" style="@style/DrawerRowStyle">
                <ImageView style="@style/DrawerRowIcon" android:src="@drawable/ic_info_24"/>
                <TextView style="@style/DrawerRowText" android:text="@string/menu_about"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/row_contact" style="@style/DrawerRowStyle">
                <ImageView style="@style/DrawerRowIcon" android:src="@drawable/ic_phone_24"/>
                <TextView style="@style/DrawerRowText" android:text="@string/menu_contact"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/logout_row"
            style="@style/DrawerRowStyle"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <ImageView style="@style/DrawerRowIcon" android:src="@drawable/ic_logout_24"/>
            <TextView style="@style/DrawerRowText" android:text="@string/menu_logout"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>